<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.myfirstwork.myfirstwork">
<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-feature android:name="android.hardware.camera2.full"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.main.MainActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.main.LentaActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"/>
        <activity android:name=".activity.post.PreviewActivity"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.main.CameraActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.main.History"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.main.Tests"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.main.Profile"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.main.TestUnit"
            android:screenOrientation="portrait"/>
    </application>

</manifest>